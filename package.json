{
  "name": "lit-composition",
  "description": "Library for creating Lit elements leveraging a composition API.",
  "keywords": [
    "Lit",
    "Web Components",
    "Composition",
    "API"
  ],
  "author": {
    "name": "Joris Aerts",
    "url": "https://github.com/JorisAerts"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JorisAerts/lit-composition.git"
  },
  "private": true,
  "version": "0.0.12",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "dist": "(node scripts/prepare-publish.js) && (pnpm vite build) && (cd dist/build && pnpm pack --pack-destination ..)",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.cjs,.json,.yml",
    "format": "prettier --write .",
    "test": "pnpm test:unit --run && pnpm cy:run",
    "test:unit": "vitest",
    "cy:open": "cypress open",
    "cy:run": "cypress run --component",
    "prepublish": "pnpm run dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@lit/context": "^1.1.6",
    "@microsoft/api-extractor": "^7.53.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "^24.6.2",
    "cypress": "^15.3.0",
    "cypress-ct-lit": "^1.0.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-lit": "2.1.1",
    "globals": "^16.3.0",
    "lit": "^3.3.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "unplugin-dts": "1.0.0-beta.6",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
