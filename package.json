    "@stylistic/eslint-plugin": "^5.5.0",
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "^24.9.1",
    "cypress": "^15.5.0",
    "cypress-ct-lit": "^1.0.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-lit": "2.1.1",
    "globals": "^16.4.0",
    "lit": "^3.3.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "unplugin-dts": "1.0.0-beta.6",
    "vite": "^7.1.12",
    "vitest": "^4.0.3"
