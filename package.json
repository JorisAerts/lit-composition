{
  "name": "lit-composition",
  "description": "Library for creating Lit elements leveraging a composition API.",
  "keywords": [
    "Lit",
    "Web Components",
    "Composition",
    "API"
  ],
  "author": {
    "name": "Joris Aerts",
    "url": "https://github.com/JorisAerts"
  },
  "license": "MIT",
  "repository": {
