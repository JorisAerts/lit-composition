    "url": "https://github.com/JorisAerts/lit-composition.git"
  },
  "private": true,
  "version": "0.2.3",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "dist": "(node scripts/prepare-publish.js) && (pnpm vite build) && (cd dist/build && pnpm pack --pack-destination ..)",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.cjs,.json,.yml",
    "format": "prettier --write .",
    "test": "pnpm test:unit --run && pnpm cy:run",
    "test:unit": "vitest",
    "cy:open": "cypress open",
    "cy:run": "cypress run --component",
    "site:build": "cd site && vite build"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@lit-labs/signals": "^0.1.3",
    "@lit/context": "^1.1.6",
